<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_contacts"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maha Dutta Paudel"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/designation_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Physics"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/email_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mdp@gmail.com"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/number_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9847566241"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>